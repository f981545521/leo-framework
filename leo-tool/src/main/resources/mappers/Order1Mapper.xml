<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.acyou.leo.tool.mapper.Order1Mapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.acyou.leo.tool.entity.Order1">
        <id column="order_id" property="orderId" />
        <result column="user_id" property="userId" />
        <result column="address_id" property="addressId" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id, user_id, address_id, status
    </sql>

    <!-- 通用别名查询结果列 -->
    <sql id="Alisa_Column_List">
        t.order_id, t.user_id, t.address_id, t.status
    </sql>



    <insert id="save" useGeneratedKeys="true" keyProperty="orderId">
        INSERT INTO t_order_1
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null"> order_id, </if>
            <if test="userId != null"> user_id, </if>
            <if test="addressId != null"> address_id, </if>
            <if test="status != null"> status, </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="orderId != null"> #{orderId}, </if>
            <if test="userId != null"> #{userId}, </if>
            <if test="addressId != null"> #{addressId}, </if>
            <if test="status != null"> #{status}, </if>
        </trim>
    </insert>

    <insert id="saveBatch" useGeneratedKeys="true" keyProperty="orderId">
        INSERT INTO t_order_1
        ( order_id, user_id, address_id, status )
        VALUES
        <foreach collection="list" item="item" separator=",">
            ( #{item.orderId}, #{item.userId}, #{item.addressId}, #{item.status} )
        </foreach>
    </insert>

    <!-- 根据主键删除 -->
    <delete id="removeById">
        DELETE FROM t_order_1 WHERE order_id = #{id}
    </delete>

    <!-- 根据主键批量删除 -->
    <delete id="removeByIds">
        DELETE FROM t_order_1 WHERE  order_id IN
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据主键更新 -->
    <update id="updateById">
        UPDATE t_order_1
        <set>
            <if test="userId != null"> user_id = #{userId}, </if>
            <if test="addressId != null"> address_id = #{addressId}, </if>
            <if test="status != null"> status = #{status}, </if>
        </set>
        WHERE  order_id = #{orderId}
    </update>

    <!-- 根据主键批量更新 -->
    <update id="updateBatchById">
        <foreach collection="list" item="item" separator=";">
            UPDATE t_order_1
            <set>
                <if test="item.userId != null"> user_id = #{item.userId}, </if>
                <if test="item.addressId != null"> address_id = #{item.addressId}, </if>
                <if test="item.status != null"> status = #{item.status}, </if>
            </set>
            WHERE order_id = #{item.orderId}
        </foreach>
    </update>

    <!-- 根据主键查询 -->
    <select id="getById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_order_1
        WHERE order_id = #{id}
    </select>

    <!-- 根据主键批量查询 -->
    <select id="listByIds" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_order_1
        WHERE order_id  IN
        <foreach collection="idList" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
