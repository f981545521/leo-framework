<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.acyou.leo.tool.mapper.ParamConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.acyou.leo.tool.entity.ParamConfig">
        <id column="id" property="id"/>
        <result column="namespace" property="namespace"/>
        <result column="code" property="code"/>
        <result column="value" property="value"/>
        <result column="ext_value" property="extValue"/>
        <result column="is_system" property="isSystem"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="sort" property="sort" />
        <result column="is_delete" property="isDelete" />
        <result column="create_time" property="createTime" />
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , namespace, code, value, ext_value, is_system, name, description, status, remark, sort, is_delete, create_time, create_user, update_time, update_user
    </sql>

    <select id="selectBySql" resultType="cn.acyou.leo.tool.entity.ParamConfig">
        select * from t_param_config where 1=1
        <if test="sql != null and sql != ''">and ${sql}</if>
    </select>

</mapper>
